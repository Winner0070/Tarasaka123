                    <DropShadowEffect BlurRadius="40" Color="#FFB91A1A"/>
                </Border.Effect>
                <TextBlock x:Name="kk" TextWrapping="Wrap" Text="TextBlock" Margin="724,711,36,27" Visibility="Hidden"/>

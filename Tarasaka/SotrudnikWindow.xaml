            <DataGrid
                AutoGenerateColumns="False"
                GridLinesVisibility="None" 
                HeadersVisibility="Column"
                BorderBrush="Gray" 
                RowHeight="40" 
                Background="#f0f0f0"
                AlternatingRowBackground="#d9e4f5" 
                CanUserAddRows="False"
